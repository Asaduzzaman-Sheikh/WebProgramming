{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js",     
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
